using System;

namespace ConsoleApp4
{

    class program { 
    
        //assign num1 to num by pre-increment and post-increment, swap
        public static void Main(string[] args)
        {
            int num1, num2, temp;
            Console.WriteLine("Enter The Value");
            num1 = Convert.ToInt32(Console.ReadLine());
            num2 = num1++;
            Console.WriteLine(num2);
            num2 = ++num1;
            Console.WriteLine(num2);

            //swaping starts here
            Console.WriteLine("Enter first number to stored in a");
            int a =  Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Enter the Second number to be stored in b");
            int b = Convert.ToInt32(Console.ReadLine());
            temp = a;
            a = b;
            b = temp;
            Console.WriteLine("Swapped Value Of \nnum1 : " + a + "\n"+"num2 : "+b);

        }
    }

}
